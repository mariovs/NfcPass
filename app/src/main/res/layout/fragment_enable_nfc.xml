<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pinview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Activează modulul NFC"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"
            android:layout_above="@+id/enableNfcImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />
        <ImageView
            android:id="@+id/enableNfcImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/nfc_turn_on" />
        <Button
            android:id="@+id/buttonEnableNfcGoSettingButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:minWidth="64dp"
            android:text="Setări"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
