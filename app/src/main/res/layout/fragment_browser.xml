<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".FragmentBrowser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/searchForGoogle"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:hint="CautÄƒ"
                android:background="@drawable/search_textbox_style"
                android:minWidth="150dp">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/searchOnGoogleButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignRight="@id/searchForGoogle"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/browser_navigate_icon"
                 />

        </RelativeLayout>

        <WebView
            android:id="@+id/webViewFb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top" />
    </LinearLayout>
</FrameLayout>
