<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pinview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/nfc_icon"
                android:layout_gravity="center_vertical"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/pinDialogTitle"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:layout_marginRight="24dp"
                android:contentDescription="@string/app_name"
                android:fontFamily="roboto"
                android:gravity="center|center_vertical"
                android:scaleType="center"
                android:text="Autentificare"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:contentDescription="@string/app_name"
            android:fontFamily="roboto"
            android:gravity="center"
            android:scaleType="center"
            android:text="Introuduceti numarul pin"
            android:textAlignment="center"
            android:textColor="@color/colorGreyedText"
            android:textSize="15sp"
            android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <EditText
                    android:id="@+id/editTextPinDialog"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:windowSoftInputMode="stateHidden"
                    android:inputType="numberPassword" />
                <Button
                    android:id="@+id/pinVisibility"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:background="@drawable/ic_visibility_black_24dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonNumarul1"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="1" />

                <Button
                    android:id="@+id/buttonNumarul2"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="2" />

                <Button
                    android:id="@+id/buttonNumarul3"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonNumarul4"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="4" />

                <Button
                    android:id="@+id/buttonNumarul5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="5" />

                <Button
                    android:id="@+id/buttonNumarul6"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonNumarul7"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="7" />

                <Button
                    android:id="@+id/buttonNumarul8"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="8" />

                <Button
                    android:id="@+id/buttonNumarul9"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="9" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/buttonDeleteLastCharPinDialog"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:paddingRight="22dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:src="@drawable/ic_backspace_black_24dp" />

                <Button
                    android:id="@+id/buttonNumarul0"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_dialog_pin_style"
                    android:text="0" />


            </LinearLayout>


        </LinearLayout>


        <!--<com.dpizarro.pinview.library.PinView-->
        <!--android:id="@+id/pinView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_marginBottom="24dp"-->
        <!--pinview:colorSplit="@color/colorPrimary"-->
        <!--pinview:colorTextPinBox="@color/colorPrimaryDark"-->
        <!--pinview:colorTextTitles="#0000"-->
        <!--pinview:deleteOnClick="true"-->
        <!--pinview:keyboardMandatory="false"-->
        <!--pinview:nativePinBox="false"-->
        <!--pinview:numberCharacters="1"-->
        <!--pinview:numberPinBoxes="5"-->
        <!--pinview:password="false"-->
        <!--pinview:split="-" />-->


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/buttonPinDialogCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:minWidth="64dp"
            android:text="Anulare"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonEnterPinDialog"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:minWidth="64dp"
            android:onClick="AuthCardFromDialogClick"
            android:text="Autentificare"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>
